<%= form_for([@post, @post.comments.build], :remote => true) do |f| %>
  <div class="control-group">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="control-group">
    <%= f.label :comment %><br />
    <%= f.text_area :comment %>
  </div>
  <div class="actions">
    <%= f.submit :class => 'btn' %>
  </div>
<% end %>
