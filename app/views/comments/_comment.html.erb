<%= div_for comment do %>
<div>
  <strong>
    <p><%= comment.name %> said:</p>
  </strong>
  <% if comment.post.owned_by? current_user %>
    <%= link_to 'Delete', [@post, comment], :confirm => "Are you sure?", :method => :delete, :remote => true %>
    <!--<%= link_to "Delete", [comment.post, comment], :confirm => "Are you sure?", :method => :delete  %>-->
  <% end %>
</div>
<div>
  <p><%= comment.comment %></p>
</div>
<% end %>